.moviedetailbox {
  background: #fff;
}
.moviedetailbox .moviedetail {
  width: 100%;
  background-color: #326665;
}
.moviedetailbox .moviedetail .moviedetail-top {
  position: relative;
  height: 440rpx;
}
.moviedetailbox .moviedetail .moviedetail-top .moviedetail-top-cover {
  position: absolute;
  width: 100%;
  height: 440rpx;
}
.moviedetailbox .moviedetail .moviedetail-top .moviedetail-top-above {
  position: absolute;
