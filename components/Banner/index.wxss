.banner-containerbox{
  position: relative;
}
.banner-container{
  width: 100%;
  height: 420rpx;
}
.banner-container image {
  width: 100%;
  height: 100%;
}
/* 用来包裹所有的小圆点 */
.dots{
  position: absolute;
  display: flex;
  width: 280rpx;
  height: 20rpx;
  justify-content: center;
  left: 75%;
  bottom: 20rpx;
  transform: translateX(-50%);
  z-index: 99999;
}
/* 未选中时的小圆点样式 */
.dot{
  width: 10rpx;
  height: 10rpx;
  margin-right: 26rpx;
  border-radius: 14rpx;
  background-color: #fff;
}
/* 选中以后的小圆点样式 */
.active{
  width: 30rpx;
  height: 10rpx;
  transition: all .3s;
  background-color: #ff5f16;
}